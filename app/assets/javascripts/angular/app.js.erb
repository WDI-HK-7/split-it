// the motherboard (define all the "routes")
'use strict';

var app = angular.module('rails-split-it', ['ngRoute'])

app.config(['$routeProvider',function($routeProvider) {
  $routeProvider.
    when('/', {
      templateUrl: "<%= asset_path('users/login.html') %>",
      controller: "LoginCtrl"
    }).
    when('/signup', {
      templateUrl: "<%= asset_path('users/signup.html') %>",
      controller: "SignupCtrl"
    }).
    when('/transactions', {
      templateUrl: "<%= asset_path('transactions/index.html') %>",
      controller: "TransactionsIndexCtrl"
    }).
    when('/expenses', {
      templateUrl: "<%= asset_path('expenses/index.html') %>",
      controller: "ExpensesIndexCtrl"
    }).
    when('/new_expenses', {
      templateUrl: "<%= asset_path('expenses/create.html') %>",
      controller: "ExpensesCreateCtrl"
    })
}])